<h2>Edit <%= @troll.name %> </h2>

<div class="formbox">
<form method="post" action="/trolls/<%= @troll.id %>">

  <label for="name">Full name:</label>
  <input type="text" name="name" id="name" value="<%= @troll.name %>">

  <label for="breed">Breed:</label>
  <input name="breed" id="breed" value="<%= @troll.breed %>"</input>

  <label for="admission-date">Admission date:</label>
  <input name="admission_date" id="admission-date" value="<%= @troll.admission_date %>"</input>

  <label for="adoptable">Adoptable:</label>
  <select name="adoptable" id="adoptable">
    <option value="Yes"  <%= (@troll.adoptable == "Yes") ? "selected" : "" %> >Adoptable</option>
    <option value="No" <%= (@troll.adoptable == "No") ? "selected" : "" %> >Not Adoptable</option>
  </select>

  <label for="owner_select">Select Owner:</label>
  <select name="owner_id" id="owner_select">
    <option value="">No Owner</option>
    <% @owners.each do |owner| %>

      <% if owner.id.to_i == @troll.owner_id.to_i %>

        <option value=<%= owner.id %> selected><%= owner.name %></option>
      <% else %>
        <option value=<%= owner.id %>><%= owner.name %></option>
      <% end %>
    <% end %>
  </select>

  <input type="submit" value="Update"/>
</form>
</div>
